<h1>Api Tests For Pattern Matching</h1>
<div class="row">
  <div class="col-xs-4">
    <h2> Choose your Input</h2>
    <%= form_tag api_v1_patterns_feature_matcher_path, method: 'POST', target: 'test_frame', multipart: true, role: 'form' do %>
      <%= hidden_field_tag :access_token, current_user.access_token %>
      <div class="form-group">
        <%= label_tag :file, "Select a file" %>
        <%= file_field_tag :file, id: 'feature_file' %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-4">
    <h2> JSON response</h2>
    <pre class="prettyprint" id="json_response" >
      
    </pre>
  </div>
  <div class="col-xs-4 matches">
     <h2>Matches</h2>
     <div id="matches">
     </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-4 detection">
    <h2>Detection</h2>
    <div id="detection" style="position:relative;">
    </div>
  </div>
</div>
