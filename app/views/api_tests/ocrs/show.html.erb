<h1>Api Tests</h1>
<div class="row">
  <div class="col-xs-4">
    <%= form_tag api_v1_patterns_ocr_path, method: 'POST', target: 'test_frame', multipart: true, role: 'form' do %>
      <%= hidden_field_tag :access_token, current_user.access_token %>
      <div class="form-group">
        <%= label_tag :file, "Select a file" %>
        <%= file_field_tag :file, id: 'ocr_file' %>
      </div>
      <div class="form-group">
        <%= submit_tag 'Upload', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-4">
    <h2> JSON response</h2>
    <div id="json_response" style="overflow:auto;height:400px;">
      
    </div>
  </div>
  <div class="col-xs-4 detection">
    <h2>Detection</h2>
    <div id="detection" style="position:relative;">
    </div>
  </div>
</div>
