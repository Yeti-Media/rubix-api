<%= form_for @pattern, html: {role: 'form'} do |f| %>
  <% if f.object.new_record? %>
    <div class="from-group">
      <%= f.label :file %>
      <%= f.file_field :file , class: 'form-control'%>
    </div>
  <% else %>
    <div class="from-group">
      <%= label_tag :pattern_file, "Patten Image"%>
      <%= image_tag f.object.file.url, width: 250, class: "img-thumbnail" %>
    </div>
  <% end %>
  <div class="from-group">
    <%= f.label :label %>
    <%= f.text_field :label, class: 'form-control' %>
  </div>
  <% if f.object.new_record? %>
    <div class="from-group">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :title, include_blank: true , class: 'form-control'%>
    </div>
  <% end %>
  <div class="from-group">
    <br />
    <%= f.submit :accept, class: 'btn btn-default' %> 
  </div>
<% end %>
