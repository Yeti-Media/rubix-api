<div class="row">
  <div class="col-xs-11">
    <h3>Patterns for user <%= "#{current_user.email}"%></h3>
  </div>
  <div class="col-xs-1">
    <%= link_to "Add Pattern", new_pattern_path, :class => 'btn btn-primary' %>
  </div>
</div>
<div class="row pagination">
  <%= paginate @patterns %>
</div>
<div class="row">
  <% @patterns.each do |pattern| %>
    <div class="col-xs-3">
      <div class="row">
        <div class="col-xs-12">
          <%= link_to edit_pattern_path(pattern) do %>
            <%= image_tag pattern.file.url, width: 260, class: 'img-thumbnail' %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-4">
          <%= link_to 'Delete', pattern_path(pattern), :method => 'delete', :confirm => 'Are you sure?', class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row pagination">
  <%= paginate @patterns %>
</div>
